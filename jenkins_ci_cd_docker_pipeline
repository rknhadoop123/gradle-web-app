node{
     
    stage('SCM Checkout'){
        git url: 'https://github.com/rknhadoop123/gradle-web-app.git',branch: 'master'
    }
    
    stage("Gradle Clean Build"){
      def GradleHome = tool name: 'gradle-5.0' , type: 'gradle'
      def gradleCMD = "${GradleHome}/bin/gradle"
      sh "${gradleCMD} clean build"
      
    } 
    /**
    stage('Gradle Clean Build With Wrapper'){
        //With out below permision clean build will not work
        sh 'chmod +x gradlew'
        sh './gradlew clean build'
    }
    **/
    
    stage('Build Docker Image'){
        sh 'docker build -t ramadocker123/gradle-web-app .'
    }

    stage('Push Docker Image'){
       withCredentials([string(credentialsId: 'DockerSecretTextPassword', variable: 'Docker_Hub_Password')]) {
    // some block

          sh "docker login -u ramadocker123 -p ${Docker_Hub_Password}"
        }
        sh 'docker push ramadocker123/gradle-web-app'
     }
     
      stage('Run Docker Image In Dev Server'){
        
        def dockerRun = ' docker run  -d -p 8080:8080 --name gradle-web-app ramadocker123/gradle-web-app'
         
         sshagent(['DOCKER_SERVER']) {
          sh 'ssh -o StrictHostKeyChecking=no ubuntu@172.31.20.72 docker stop gradle-web-app || true'
          sh 'ssh  ubuntu@172.31.31.195 docker rm gradle-web-app || true'
          sh 'ssh  ubuntu@172.31.31.195 docker rmi -f  $(docker images -q) || true'
          sh "ssh  ubuntu@172.31.31.195 ${dockerRun}"
       }
       
    }
     
     
}
